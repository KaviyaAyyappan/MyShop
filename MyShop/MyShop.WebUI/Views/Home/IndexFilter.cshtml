@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>
<ul>
    @foreach (var items in Model)
    {
        <li>@items.Category</li>
    }
</ul>

<form asp-controller="ProductManager" asp-action="Index">
    <p>
        Title: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>



@foreach (var item in Model)
{

    <div class="col-md-4" style="height:450px; padding:10px; margin:10px; border:solid thin whitesmoke">
        <div class="col-md-12">
            <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
        </div>
        <div class="col-md-12">
            <strong>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <p>@item.Price</p>
        </div>

        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to cart</a>
        </div>
    </div>


}
<div class="col-md-12 clearfix">

</div>
